<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>CUSTOM-cobertura</actionName>
        <displayName>cobertura</displayName>
        <goals>
            <goal>cobertura:cobertura</goal>
        </goals>
    </action>
    <action>
        <actionName>CUSTOM-pit</actionName>
        <displayName>pit</displayName>
        <goals>
            <goal>org.pitest:pitest-maven:mutationCoverage</goal>
        </goals>
    </action>
    <action>
        <actionName>CUSTOM-Javadoc</actionName>
        <displayName>Javadoc</displayName>
        <goals>
            <goal>javadoc:javadoc</goal>
        </goals>
    </action>
    <action>
        <actionName>CUSTOM-checkstyle</actionName>
        <displayName>Checkstyle</displayName>
        <goals>
            <goal>jxr:jxr</goal>
            <goal>checkstyle:checkstyle</goal>
        </goals>
    </action>
    <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Djava.library.path=/usr/share/lwjgl321/ -Djava.library.path=/usr/share/lwjgl321/lwjgl-natives-linux.jar -Djava.library.path=/usr/share/lwjgl321/lwjgl-opengl-natives-linux.jar -Djava.library.path=/usr/share/lwjgl321/lwjgl-glfw-natives-linux.jar -Dorg.lwjgl.util.Debug=true -classpath %classpath ${packageClassName}</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
    <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -Djava.library.path=/usr/share/lwjgl321/ -Djava.library.path=/usr/share/lwjgl321/lwjgl-natives-linux.jar -Djava.library.path=/usr/share/lwjgl321/lwjgl-opengl-natives-linux.jar -Djava.library.path=/usr/share/lwjgl321/lwjgl-glfw-natives-linux.jar -Dorg.lwjgl.util.Debug=true -classpath %classpath ${packageClassName}</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
    <action>
            <actionName>profile</actionName>
            <packagings>
                <packaging>jar</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Djava.library.path=/usr/share/lwjgl321/ -Djava.library.path=/usr/share/lwjgl321/lwjgl-natives-linux.jar -Djava.library.path=/usr/share/lwjgl321/lwjgl-opengl-natives-linux.jar -Djava.library.path=/usr/share/lwjgl321/lwjgl-glfw-natives-linux.jar -Dorg.lwjgl.util.Debug=true -classpath %classpath ${packageClassName}</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
</actions>
